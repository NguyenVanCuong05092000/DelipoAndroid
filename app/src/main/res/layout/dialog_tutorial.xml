<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/_30ssdp"
    android:paddingRight="@dimen/_30ssdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_dialog"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingTop="@dimen/_15ssdp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/_15ssdp"
            android:layout_marginRight="@dimen/_15ssdp"
            android:layout_marginBottom="@dimen/_10ssdp"
            android:textColor="@drawable/title_highlight_color_selector"
            android:textSize="@dimen/ts_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15ssdp"
            android:layout_marginRight="@dimen/_15ssdp"
            android:layout_marginBottom="@dimen/_15ssdp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/ts_16" />

        <CheckBox
            android:id="@+id/cbDontAskAgain"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30ssdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/_15ssdp"
            android:layout_marginRight="@dimen/_15ssdp"
            android:layout_marginBottom="@dimen/_15ssdp"
            android:paddingLeft="@dimen/_6ssdp"
            android:text="@string/titleDontAskAgain"
            android:textSize="@dimen/tsExclusionCommon"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/_10ssdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorBorder" />

        <TextView
            android:id="@+id/btnOk"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50ssdp"
            android:gravity="center"
            android:text="@string/lblOK"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/ts_18" />
    </LinearLayout>

</RelativeLayout>

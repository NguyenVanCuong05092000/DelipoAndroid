                    android:layout_width="0dp"
                    android:layout_height="0.7dp"
                    android:background="@color/colorBorder"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/btnMemberInformation1"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:background="@color/colorWhite"
                    android:drawableEnd="@drawable/ic_skip_intro"
                    android:gravity="left|center"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toStartOf="@id/guiH96"
                    app:layout_constraintStart_toEndOf="@+id/guiH04"
                    app:layout_constraintTop_toBottomOf="@id/view" />

                <View
                    android:id="@+id/viewMemberInformation1"
                    android:layout_width="0dp"
                    android:layout_height="0.7dp"
                    android:background="@color/colorBorder"
                    app:layout_constraintEnd_toEndOf="parent"

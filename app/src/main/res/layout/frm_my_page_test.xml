                    android:layout_height="20dp"
                    android:background="@color/colorBgrTextView"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="parent"
